<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <CheckBox
        android:id="@+id/display_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enabled"
        android:layout_toRightOf="@+id/player_name"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/player_name_margin"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/trick_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/display_enabled"
        android:layout_alignTop="@id/player_name"
        android:layout_marginLeft="@dimen/trick_margin_left"
        android:layout_marginBottom="@dimen/player_name_margin" />  
    
    <Button
        android:id="@+id/card1"
        style="@style/CardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_name"
        android:text="" />

    <Button
        android:id="@+id/card2"
        style="@style/CardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/card1"
        android:layout_toRightOf="@id/card1"
        android:text="" />

    <Button
        android:id="@+id/card3"
        style="@style/CardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/card2"
        android:layout_toRightOf="@id/card2"
        android:text="" />

    <Button
        android:id="@+id/card4"
        style="@style/CardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/card3"
        android:layout_toRightOf="@id/card3"
        android:text="" />

    <Button
        android:id="@+id/card5"
        style="@style/CardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/card4"
        android:layout_toRightOf="@id/card4"
        android:text="" />

    <RadioButton
        android:id="@+id/cardSelect1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/card1"
        android:visibility="gone"
        android:layout_below="@id/card1" />

    <RadioButton
        android:id="@+id/cardSelect2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/card2"
        android:visibility="gone"
        android:layout_below="@id/card2" />

    <RadioButton
        android:id="@+id/cardSelect3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/card3"
        android:visibility="gone"
        android:layout_below="@id/card3" />

    <RadioButton
        android:id="@+id/cardSelect4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/card4"
        android:visibility="gone"
        android:layout_below="@id/card4" />

    <RadioButton
        android:id="@+id/cardSelect5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/card5"
        android:visibility="gone"
        android:layout_below="@id/card5" />

    <Button
        android:id="@+id/extra_card"
        style="@style/CardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_below="@id/cardSelect1" />
    
    <RadioButton
        android:id="@+id/extra_card_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/extra_card"
        android:visibility="gone"
        android:layout_below="@id/extra_card" />
    
    <Button
        android:id="@+id/discard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/extra_card"
        android:layout_below="@id/cardSelect1"
        android:visibility="gone"
        android:text="@string/discard" />
    <Button
        android:id="@+id/show_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/discard"
        android:layout_below="@id/cardSelect1"
        android:visibility="gone"
        android:text="@string/show_cards" />

</RelativeLayout>